# -*- mode:Shell-script -*-
# ./doit ../foo/bar ~/.baz
#

if [[ $# -ne 2 ]]; then
    echo "usage: $0 source target"
    echo "$0 ../foo/bar ~/.baz"
    exit 1
fi

source=$1
target=$2

if [[ -f "$target" ]]; then
    echo "$target already present ..."
    echo "making backups ..."
    cp -aiv "$target" "$target".backup_$(date +%T_%F)
fi

ln -fsv "$(realpath $source)" "$target"

# vim: set ft=sh
